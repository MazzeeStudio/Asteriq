{
  "$schema": "device-control-map.schema.json",
  "schemaVersion": "1.1",
  "device": "Generic Throttle",
  "deviceType": "Throttle",
  "svgFile": "throttle.svg",
  "viewBox": { "x": 2048, "y": 2048 },
  "controls": {
    "throttle_main": {
      "id": "control_throttle",
      "type": "Slider",
      "bindings": ["z", "throttle"],
      "label": "Throttle",
      "description": "Primary throttle lever",
      "anchor": { "x": 800, "y": 1000 },
      "labelOffset": { "x": -150, "y": 0 }
    },
    "throttle_left": {
      "id": "control_throttle_left",
      "type": "Slider",
      "bindings": ["slider1"],
      "label": "Left Throttle",
      "description": "Left engine throttle (dual throttle)",
      "anchor": { "x": 700, "y": 900 },
      "labelOffset": { "x": -160, "y": -40 }
    },
    "throttle_right": {
      "id": "control_throttle_right",
      "type": "Slider",
      "bindings": ["slider2"],
      "label": "Right Throttle",
      "description": "Right engine throttle (dual throttle)",
      "anchor": { "x": 900, "y": 900 },
      "labelOffset": { "x": 160, "y": -40 }
    },
    "ministick": {
      "id": "control_ministick",
      "type": "Ministick",
      "bindings": ["rx", "ry", "button15"],
      "label": "Ministick",
      "description": "Analog ministick with push button",
      "anchor": { "x": 600, "y": 500 },
      "labelOffset": { "x": -140, "y": 0 }
    },
    "encoder1": {
      "id": "control_encoder1",
      "type": "Encoder",
      "bindings": ["button20", "button21"],
      "label": "Rotary 1",
      "description": "Rotary encoder (CW/CCW as button presses)",
      "anchor": { "x": 400, "y": 400 },
      "labelOffset": { "x": -120, "y": -50 }
    },
    "button1": {
      "id": "control_button1",
      "type": "Button",
      "bindings": ["button1"],
      "label": "Button 1",
      "anchor": { "x": 500, "y": 600 },
      "labelOffset": { "x": -100, "y": -30 }
    },
    "toggle1": {
      "id": "control_toggle1",
      "type": "Toggle",
      "bindings": ["button10", "button11"],
      "label": "Toggle 1",
      "description": "Two-position toggle switch (up/down positions)",
      "anchor": { "x": 300, "y": 700 },
      "labelOffset": { "x": -130, "y": 0 }
    }
  }
}
