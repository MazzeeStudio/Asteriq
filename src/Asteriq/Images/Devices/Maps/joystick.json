{
  "$schema": "device-control-map.schema.json",
  "schemaVersion": "1.1",
  "device": "Generic Joystick",
  "deviceType": "Stick",
  "svgFile": "joystick.svg",
  "viewBox": { "x": 2048, "y": 2048 },
  "controls": {
    "trigger": {
      "id": "control_trigger",
      "type": "Button",
      "bindings": ["button1", "button2"],
      "label": "Trigger",
      "description": "Dual-stage trigger: Stage1=button1, Stage2=button2",
      "anchor": { "x": 950, "y": 450 },
      "labelOffset": { "x": -150, "y": -50 },
      "leadLine": {
        "shelfSide": "right",
        "shelfLength": 100,
        "segments": [
          { "angle": 60, "length": 120 },
          { "angle": 0, "length": 80 }
        ]
      }
    },
    "ministick": {
      "id": "control_ministick",
      "type": "Ministick",
      "bindings": ["rx", "ry", "button6"],
      "label": "Ministick",
      "description": "Analog ministick: X=rX, Y=rY, Push=button6",
      "anchor": { "x": 1100, "y": 350 },
      "labelOffset": { "x": 120, "y": -40 }
    },
    "top_button": {
      "id": "control_top_button",
      "type": "Button",
      "bindings": ["button7"],
      "label": "Top Button",
      "description": "Top center button: button7",
      "anchor": { "x": 600, "y": 150 },
      "labelOffset": { "x": 0, "y": -60 }
    },
    "top_hat": {
      "id": "control_top_hat",
      "type": "Hat",
      "bindings": ["button8", "button9", "button10", "button11", "button12"],
      "label": "Top Hat",
      "description": "5-way top hat: Center=button8, Up=button9, Left=button10, Down=button11, Right=button12",
      "anchor": { "x": 900, "y": 180 },
      "labelOffset": { "x": 120, "y": -50 }
    },
    "castle_left": {
      "id": "control_castle_left",
      "type": "Hat",
      "bindings": ["button14", "button15", "button16", "button17", "button18"],
      "label": "Castle Switch",
      "description": "5-way castle: Center=button14, Up=button15, Left=button16, Down=button17, Right=button18",
      "anchor": { "x": 350, "y": 380 },
      "labelOffset": { "x": -130, "y": 0 },
      "leadLine": {
        "shelfSide": "left",
        "shelfLength": 80,
        "segments": [
          { "angle": 45, "length": 100 },
          { "angle": 0, "length": 60 }
        ]
      }
    },
    "side_button": {
      "id": "control_side_button",
      "type": "Button",
      "bindings": ["button13"],
      "label": "Side Button",
      "description": "Side button: button13",
      "anchor": { "x": 1100, "y": 350 },
      "labelOffset": { "x": 110, "y": 0 }
    },
    "toggle": {
      "id": "control_toggle",
      "type": "Toggle",
      "bindings": ["button19", "button20", "button21", "button22"],
      "label": "Toggle Switch",
      "description": "2-way toggle + buttons: Center=button19, Toggle=button20, Up=button21, Down=button22",
      "anchor": { "x": 300, "y": 550 },
      "labelOffset": { "x": -140, "y": 0 }
    },
    "thumb_hat": {
      "id": "control_thumb_hat",
      "type": "Hat",
      "bindings": ["button23", "button24", "button25", "button26", "button27"],
      "label": "Thumb Hat",
      "description": "5-way thumb hat: Push=button23, Up=button24, Left=button25, Down=button26, Right=button27",
      "anchor": { "x": 700, "y": 750 },
      "labelOffset": { "x": 0, "y": 80 }
    },
    "two_way_hat": {
      "id": "control_two_way_hat",
      "type": "Hat",
      "bindings": ["button28", "button29", "button30"],
      "label": "2-Way Hat",
      "description": "2-way hat + push: Center=button28, Up=button29, Down=button30",
      "anchor": { "x": 1300, "y": 380 },
      "labelOffset": { "x": 130, "y": 0 },
      "leadLine": {
        "shelfSide": "right",
        "shelfLength": 80,
        "segments": [
          { "angle": -30, "length": 100 }
        ]
      }
    },
    "slider": {
      "id": "control_slider",
      "type": "Slider",
      "bindings": ["slider1", "button32"],
      "label": "Brake Lever",
      "description": "Analog brake lever + button: Axis=slider1, Button=button32",
      "anchor": { "x": 900, "y": 680 },
      "labelOffset": { "x": 100, "y": 40 }
    }
  }
}
